<h1>Administration</h1>

<div class="row">
  <!-- Left Sidebar -->
  <div class="col-lg-4 col-md-5 col-sm-12 col-xs-12">
    <div class="panel panel-default" id="activity-summary">
      <!-- Default panel contents -->
      <div class="panel-heading">User Statistics</div>
      <!-- List group -->
      <ul class="list-group">
        <li class="list-group-item">Total Registered Users:<span class="badge"><%= @registeredUsers %></span></li>
        <li class="list-group-item">No. of users logged in this week:<span class="badge"><%= @loggedInLastWeek %></span></li>
        <li class="list-group-item">No. of users logged in this month:<span class="badge"><%= @loggedInLastMonth %></span></li>
      </ul>
    </div>

    <div class="list-group">

      <%= link_to 'User Manager', admin_user_managers_path, {:class => 'list-group-item'} %>
    </div>
  </div>

  <div class="col-lg-8 col-md-7 col-sm-12 col-xs-12">
    <h3>Recently Registered Users</h3>
    <table class="table table-striped table-hover" id="recently-registered-users">
      <thead>
      <tr>
        <th>Email</th>
        <th>Registered Date</th>
      </tr>
      </thead>
      <tbody>
      <% @recentlyRegistered.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

