<h1>Administration</h1>

<%= link_to 'User Manager', admin_user_manager_index_path %>

<h3>User Statistics</h3>
<div>
  <dl>
    <dt>Total Registered Users:</dt>
    <dd><%= @registeredUsers %></dd>
    <dt>No. of users logged in this week:</dt>
    <dd><%= @loggedInLastWeek %></dd>
    <dt>No. of users logged in this month:</dt>
    <dd><%= @loggedInLastMonth %></dd>

  </dl>
</div>

<h3>Recently Registered Users</h3>
<table class="table" id="recently-registered-users">
  <thead>
    <tr>
      <th>Email</th>
      <th>Registered Date</th>
    </tr>
  </thead>
  <tbody>
    <% @recentlyRegistered.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>