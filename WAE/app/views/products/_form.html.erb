<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :category, "Select Category" %>
    <%#= f.text_field :ps_two_categories_id %>
    <%#= f.collection_select(:ps_two_categories_id, PsTwo::Category.all + [PsTwo::Category.new(id: -1, name: "New Category")], :id, :name, {:selected => '-1'}) %>
    <%#= f.collection_select(:id, Category.all, :id, :name, {:prompt => '--- Select category ---'}, {:multiple => true, :name => 'product[category_ids][]'}) %>
    <%= f.collection_select(:id, Category.all, :id, :name, {}, {:multiple => true, :name => 'product[category_ids][]'}) %>
    <%#= text_field_tag :new_product_category, nil, {:placeholder => "Add New Category"} %>
  </div>

  <div class="field">
    <%= f.label :features %>
    <%= f.text_field :features %>
  </div>

  <div class="field">
    <%= f.label :product_no %>
    <%= f.text_field :product_no %>
  </div>

  <div class="field">
    <%= f.label :is_deleted %>
    <%= f.check_box :is_deleted %>
  </div>

  <div class="field">
    <%= f.label :is_published %>
    <%= f.check_box :is_published %>
  </div>

  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>

  <div class="field">
    <%= f.label :standard_cost %>
    <%= f.text_field :standard_cost %>
  </div>

  <div class="field">
    <%= f.label :selling_price %>
    <%= f.text_field :selling_price %>
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :quantity_total %>
    <%= f.number_field :quantity_total %>
  </div>

  <div class="field">
    <%= f.label :quantity_sold %>
    <%= f.number_field :quantity_sold %>
  </div>

  <div class="field">
    <%= f.label :sell_start_date %>
    <%= f.date_select :sell_start_date %>
  </div>

  <div class="field">
    <%= f.label :sell_end_date %>
    <%= f.date_select :sell_end_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
