<h1>Top 10 Youtube trend</h1>
<body>
<% @i = 1%>
<% @trending.each do |el| %>
    <p>No.<%= @i %></p>
    <%= @title = "Title:  "+el.text %><br>
    <a href="<%= @link = "http://www.youtube.com"+ el['href'] %>"><%= @link = "http://www.youtube.com"+ el['href'] %></a><br>
    <% @img = el['href'][9..19] %>
    <img src="<%= @imglink = "https://img.youtube.com/vi/"+@img+"/0.jpg" %>"><br>
    <% @i = @i+1 %>
<% end%>

<div>
  <h3>How it works?</h3>
