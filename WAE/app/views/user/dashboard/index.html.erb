<h1>Dashboard</h1>
<div class="row">
  <!-- Left Sidebar -->
  <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
    <div class="panel panel-default" id="activity-summary">
      <!-- Default panel contents -->
      <div class="panel-heading">Activity Summary</div>
      <!-- List group -->
      <ul class="list-group">
        <li class="list-group-item">Total Posts<span class="badge"><%= @products.size %></span></li>
        <li class="list-group-item">Total Comments<span class="badge"><%= @user.comments.size %></span></li>
        <li class="list-group-item">Last SignIn<span class="badge"><%= time_ago_in_words (Time.at(@user.current_sign_in_at)) %></span>
        <li class="list-group-item"><%= link_to 'Notification', user_notifications_path%><span class="badge"><%= @notification_count %></span></li>
      </ul>
    </div>
  </div>

  <!-- Main Body -->
  <div class="col-lg-9 col-md-8 col-sm-12 col-xs-12">
    <%= 'You\'ve posted no items.' if (@products.size == 0)  %>
    <table class="table table-striped table-hover" id="product-list">
      <thead>
        <tr>
          <th>Name of Product</th>
          <th>Selling Price</th>
          <th>Publish Status</th>
          <th>Posted Date</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.name, product %></td>
            <td>&#3647; <%= product.selling_price %></td>
            <td><%= product.is_published ? 'Yes' : 'No' %></td>
            <td><%= product.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
